{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://mediaspawner.app/schema/config/v1.0.0",
    "title": "MediaSpawnerConfig",
    "description": "Configuration authored by MediaSpawner (config-only; no runtime info)",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "const": "1.0.0"
        },
        "profiles": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/SpawnProfile"
            }
        },
        "assets": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/Asset"
            }
        }
    },
    "required": [
        "version",
        "profiles",
        "assets"
    ],
    "$defs": {
        "SpawnProfile": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "workingDirectory": {
                    "type": "string"
                },
                "spawns": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Spawn"
                    }
                },
                "lastModified": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": [
                "id",
                "name",
                "workingDirectory",
                "spawns"
            ]
        },
        "Spawn": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "trigger": {
                    "$ref": "#/$defs/Trigger"
                },
                "durationMs": {
                    "type": "integer",
                    "minimum": 0
                },
                "assets": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/SpawnAsset"
                    }
                }
            },
            "required": [
                "id",
                "name",
                "enabled",
                "assets"
            ]
        },
        "SpawnAsset": {
            "type": "object",
            "properties": {
                "assetId": {
                    "type": "string"
                },
                "order": {
                    "type": "integer",
                    "minimum": 0
                },
                "overrides": {
                    "$ref": "#/$defs/AssetSettings"
                }
            },
            "required": [
                "assetId"
            ]
        },
        "Asset": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "isUrl": {
                    "type": "boolean"
                },
                "type": {
                    "enum": [
                        "image",
                        "video",
                        "audio"
                    ]
                }
            },
            "required": [
                "id",
                "path",
                "type"
            ]
        },
        "AssetSettings": {
            "type": "object",
            "properties": {
                "volume": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "width": {
                    "type": "integer",
                    "minimum": 1
                },
                "height": {
                    "type": "integer",
                    "minimum": 1
                },
                "scale": {
                    "type": "number",
                    "minimum": 0
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "loop": {
                    "type": "boolean"
                },
                "autoplay": {
                    "type": "boolean"
                },
                "muted": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        },
        "Trigger": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": [
                        "manual",
                        "command",
                        "channelPoint",
                        "subscription",
                        "cheer",
                        "follow",
                        "time"
                    ]
                },
                "settings": {
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "required": [
                "type"
            ],
            "additionalProperties": false
        }
    }
}